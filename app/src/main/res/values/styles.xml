<resources>

    <style name="ToolbarTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
    </style>

    <style name="movieTabStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="navigationViewStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>