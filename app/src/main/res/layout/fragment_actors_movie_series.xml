<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.mf.movielibrary.fragments.ActorsMovieTvShowsFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/movieSeriesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/size_4dp"
        android:paddingBottom="@dimen/size_4dp"
        android:paddingLeft="@dimen/size_8dp"
        android:clipToPadding="false" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/noMovieSeriesLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/genreRecyclerView"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/noMovieSeriesImage"
            android:layout_width="@dimen/size_310dp"
            android:layout_height="@dimen/size_310dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_16dp"
            android:layout_marginRight="@dimen/size_16dp"
            android:layout_marginTop="@dimen/size_32dp"
            android:ellipsize="end"
            android:fontFamily="@font/noto_sans_regular"
            android:gravity="center"
            android:text="Nothing Here !"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/noMovieSeriesSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_16dp"
            android:layout_marginRight="@dimen/size_16dp"
            android:layout_marginTop="@dimen/size_8dp"
            android:ellipsize="end"
            android:fontFamily="@font/noto_sans_regular"
            android:gravity="center"
            android:textSize="@dimen/text_size_14" />

    </LinearLayout>

</RelativeLayout>