<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/genreBottomSheet"
    app:behavior_hideable="true"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darkGrey"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/size_16dp"
        android:paddingLeft="@dimen/size_8dp"
        android:paddingRight="@dimen/size_8dp"
        android:paddingTop="@dimen/size_16dp">

        <TextView
            android:id="@+id/moviesTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tag_background_drawable"
            android:fontFamily="@font/noto_sans_regular"
            android:paddingBottom="@dimen/size_6dp"
            android:paddingLeft="@dimen/size_16dp"
            android:paddingRight="@dimen/size_16dp"
            android:paddingTop="@dimen/size_6dp"
            android:text="Movies"
            android:textColor="@color/mediumGrey"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tvShowsTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_8dp"
            android:background="@drawable/tag_background_drawable"
            android:fontFamily="@font/noto_sans_regular"
            android:paddingBottom="@dimen/size_6dp"
            android:paddingLeft="@dimen/size_16dp"
            android:paddingRight="@dimen/size_16dp"
            android:paddingTop="@dimen/size_6dp"
            android:text="Tv shows"
            android:textColor="@color/mediumGrey"
            android:textSize="@dimen/text_size_12" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0.5dp"
        android:background="@color/mediumGrey" />

    <LinearLayout
        android:id="@+id/genreTagsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0.5dp"
        android:background="@color/mediumGrey" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_regular"
        android:gravity="center"
        android:padding="@dimen/size_16dp"
        android:text="Search"
        android:textColor="@color/mediumGrey"
        android:textSize="@dimen/text_size_16" />

</LinearLayout>