<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_4dp"
    android:layout_marginEnd="@dimen/size_8dp"
    android:layout_marginTop="@dimen/size_4dp">

    <android.support.v7.widget.CardView
        android:id="@+id/actorsCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/darkGrey"
        app:layout_constraintDimensionRatio="1:1.4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/actorsPic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/actorsName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_regular"
        android:layout_marginTop="@dimen/size_8dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/text_size_12"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/actorsCard"
        app:layout_constraintStart_toStartOf="@+id/actorsCard"
        app:layout_constraintEnd_toEndOf="@+id/actorsCard" />

    <TextView
        android:id="@+id/actorsCharacterName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_regular"
        android:layout_marginTop="@dimen/size_4dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintTop_toBottomOf="@+id/actorsName"
        app:layout_constraintStart_toStartOf="@+id/actorsCard"
        app:layout_constraintEnd_toEndOf="@+id/actorsCard" />

</android.support.constraint.ConstraintLayout>