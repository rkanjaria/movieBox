<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.mf.movielibrary.fragments.FavouritesFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/favouritesRecyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/size_4dp"
        android:paddingLeft="@dimen/size_8dp"
        android:paddingTop="@dimen/size_4dp" />

</RelativeLayout>
